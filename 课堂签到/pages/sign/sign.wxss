/* pages/sign/sign.wxss */
/* 1.选择时间 */
page{
  background: #f1f1f1;
}

.time{
  background: #fff;
  padding: 20rpx 20rpx;
  width: 100%;
  min-height: 400rpx;
  margin-bottom: 50rpx;
  display: flex;
  align-items: center;
  color: #666;
}

.time-title{
  margin-left: 40rpx;
}

.picker{
  width: 60%;
  height: 80rpx;
  background: #f1f1f1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.picker view{
  margin-left: 40rpx;
}

/* 2.确定 */
.confirm{
  width: 100%;
  min-height: 100rpx;
}

.confirm button{
  margin: 0 auto;
  border-radius: 20rpx;
}