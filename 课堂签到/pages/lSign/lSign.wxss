/* pages/lSign/lSign.wxss */
page{
  background: #f1f1f1;
}
.head{
  background: #fff;
  color: #666;
}

.map map{
  width: 100%;
  height: 700rpx;
  margin: 0 auto;
}

.range{
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx;
  margin-left: 40rpx;
}

.range input{
  background: #f1f1f1;
  padding-left: 10rpx;
  margin-left: 20rpx;
  height: 60rpx;
  border-radius: 10rpx;
  width: 300rpx;
}

.change{
  display: flex;
  align-items: center;
}

.d,.i{
  background: #07C160;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
}
.d text,.i text{
  margin: 0 auto;
}
.i{
  margin-left: 10rpx;
}

.time{
  background: #fff;
  padding: 20rpx 20rpx;
  width: 100%;
  min-height: 100rpx;
  margin-bottom: 50rpx;
  display: flex;
  align-items: center;
  color: #666;
}

.time-title{
  margin-left: 40rpx;
}

.picker{
  width: 60%;
  height: 80rpx;
  background: #f1f1f1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.picker view{
  margin-left: 40rpx;
}

/* 2.确定 */
.confirm{
  width: 100%;
  min-height: 100rpx;
}

.confirm button{
  margin: 0 auto;
  border-radius: 20rpx;
}