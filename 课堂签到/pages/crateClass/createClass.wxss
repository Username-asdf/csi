/* pages/crateClass/createClass.wxss */
/* 1.创建班级 */
page{
  background: #f1f1f1;
}

.inputName{
  background: #fff;
  padding: 20rpx 20rpx;
  width: 100%;
  min-height: 400rpx;
  margin-bottom: 50rpx;
  display: flex;
  align-items: center;
}

.inputName input{
  border: solid 2rpx #aaa;
  padding-left: 20rpx;
  width:80%;
  height: 80rpx;
  margin:0 auto;
  color: #666;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.confirm{
  width: 100%;
  min-height: 100rpx;
}

.confirm button{
  margin: 0 auto;
  border-radius: 20rpx;
}

/* 2.展示班级邀请码 */
.num{
  background: #fff;
  padding: 20rpx 20rpx;
  width: 100%;
  min-height: 400rpx;
  margin-bottom: 50rpx;
  display: flex;
  align-items: center;
}

.title{
  color: #666;
  margin-left: 60rpx;
}

.ma{
  color: #666;
  font-size: 46rpx;
  margin-left: 20rpx;
  font-weight: bold;
}