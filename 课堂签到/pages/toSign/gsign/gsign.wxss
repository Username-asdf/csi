/* pages/gSign/gSign.wxss */
page{
  background: #f1f1f1;
}
.head{
  background: #fff;
  color: #666;
  margin-bottom: 30rpx;
}
.pwd{
  position: relative;
}

.reset{
  position: absolute;
  right:40rpx;
  margin-top: 20rpx;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
  color: #EF2424;
}

.container{
  padding: 0 0;
  padding-top: 40rpx;
}

.gesture-lock {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 300px;
  height: 300px;
  background-color: #ffffff;
}

.time{
  background: #fff;
  padding: 20rpx 20rpx;
  width: 100%;
  min-height: 100rpx;
  margin-bottom: 50rpx;
  display: flex;
  align-items: center;
  color: #666;
}

.time-title{
  margin-left: 40rpx;
}

.picker{
  width: 60%;
  height: 80rpx;
  background: #f1f1f1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.picker view{
  margin-left: 40rpx;
}

/* 2.确定 */
.confirm{
  width: 100%;
  min-height: 100rpx;
}

.confirm button{
  margin: 0 auto;
  border-radius: 20rpx;
}